<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loopvie.Pages.Login.LoginPage"
             Title="LoginPage">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <Label 
            Text="Login"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="32" />
        <Border BackgroundColor="White" Margin="10" Padding="5" StrokeShape="RoundRectangle 5">
            <Entry Placeholder="Email" TextColor="Black" FontSize="16"/>
        </Border>
        <Border BackgroundColor="White" Margin="10" Padding="5" StrokeShape="RoundRectangle 5">
            <Entry Placeholder="Password" TextColor="Black" IsPassword="True" FontSize="16"/>
        </Border>
    </VerticalStackLayout>
</ContentPage>